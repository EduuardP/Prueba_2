<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageArtist"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Imagen de Artista"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nameArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/imageArtist"
        android:layout_toRightOf="@+id/imageArtist"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/oyentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameArtist"
        android:layout_alignStart="@+id/nameArtist"
        android:layout_alignLeft="@+id/nameArtist"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="@string/oyentes" />

    <TextView
        android:id="@+id/numOyentesArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/oyentes"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/oyentes"
        android:layout_toRightOf="@+id/oyentes" />

    <TextView
        android:id="@+id/urlArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oyentes"
        android:layout_alignStart="@+id/oyentes"
        android:layout_alignLeft="@+id/oyentes"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp" />
</RelativeLayout>