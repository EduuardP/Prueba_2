<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/oyentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTrack"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="@string/oyentes"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/numOyentesTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/oyentes"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/oyentes"
        android:layout_toRightOf="@+id/oyentes"
        android:text="123123"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oyentes"

        android:layout_alignStart="@+id/oyentes"
        android:layout_alignLeft="@+id/oyentes"

        android:layout_marginTop="2dp"
        android:text="@string/rank" />

    <TextView
        android:id="@+id/numRankTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rank"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/numOyentesTrack"
        android:layout_toRightOf="@+id/numOyentesTrack"
         />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTrack"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/numOyentesTrack"
        android:layout_toRightOf="@+id/numOyentesTrack"
        android:text="@string/duration" />

    <TextView
        android:id="@+id/numDurationTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/duration"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/duration"
        android:layout_toRightOf="@+id/duration"
        android:text="2:20" />

    <TextView
        android:id="@+id/nameArtistTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numDurationTrack"
        android:layout_alignStart="@+id/numDurationTrack"
        android:layout_alignLeft="@+id/numDurationTrack"

        android:layout_alignEnd="@+id/nameTrack"
        android:layout_alignRight="@+id/nameTrack"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Do I Wanna Know?" />

    <ImageView
        android:id="@+id/imageArtistTrack"
        android:layout_width="31dp"
        android:layout_height="21dp"
        android:layout_below="@+id/numDurationTrack"
        android:layout_alignEnd="@+id/duration"
        android:layout_alignRight="@+id/duration"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>